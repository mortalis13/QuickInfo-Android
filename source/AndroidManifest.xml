<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.mortalis.quickinfo"
    android:versionCode="1"
    android:versionName="1.0.1" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="23" />

    <application
        android:name=".GlobalApp"
        android:allowBackup="true"
        android:icon="@drawable/icon" 
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- android:theme="@style/Theme.AppCompat.Light.NoActionBar" > -->


        <!-- android:theme="@android:style/Theme.Holo.Light" > -->
        <!-- android:theme="@android:style/Theme.Holo.Light.DarkActionBar" > -->

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".EditorActivity"
            android:label="@string/title_activity_editor"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.mortalis.quickinfo.MainActivity" />
        </activity>
        
        <activity
            android:name="org.mortalis.quickinfo.views.TimetableViewActivity"
            android:label="@string/title_activity_timetable_view" 
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.mortalis.quickinfo.MainActivity" />
        </activity>
        
        <activity android:name="org.mortalis.quickinfo.views.NoteViewActivity"
            android:label="@string/title_activity_note_view" 
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.mortalis.quickinfo.MainActivity" />
        </activity>
    </application>

</manifest>
